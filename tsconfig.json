{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}